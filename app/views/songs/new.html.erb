<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :genre %><br>
  <%= f.collection_select :genre_id, @genres, :id, :name %>
  <%= f.label :artist %><br>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %><br>
    <datalist id="artists_autocomplete">
      <% @artists.each do |artist| %>
        <option value="<%= artist.name %>">
      <%end%>
    </datalist>

  <label>Notes:</label><br>
  <input id="song_notes_1" name="song[notes][]"><br>
  <label>Notes:</label><br>
  <input id="song_notes_2" name="song[notes][]"><br>

  <%= f.submit %>
<% end %>


